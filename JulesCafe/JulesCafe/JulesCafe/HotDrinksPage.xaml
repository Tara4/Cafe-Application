<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JulesCafe.HotDrinksPage"
             BackgroundColor="#323130">
    
    <StackLayout>
        <Frame BackgroundColor="#323130" Padding="24" CornerRadius="0">
            <Label Text="Hot Drinks" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Grid BackgroundColor="#8c6d42" Padding="24">
            <Label Text="Hot Chocolate" HorizontalTextAlignment="Left" TextColor="White" FontSize="24"/>
            <Label Text="$3.00" HorizontalTextAlignment="Right" TextColor="White" FontSize="24"/>
        </Grid>

        <Grid BackgroundColor="#8c6d42" Padding="24">
            <Label Text="Tea" HorizontalTextAlignment="Left" TextColor="White" FontSize="24"/>
            <Label Text="$2.00" HorizontalTextAlignment="Right" TextColor="White" FontSize="24"/>
        </Grid>

        <Grid BackgroundColor="#8c6d42" Padding="24">
            <Label Text="Green Tea" HorizontalTextAlignment="Left" TextColor="White" FontSize="24"/>
            <Label Text="$2.00" HorizontalTextAlignment="Right" TextColor="White" FontSize="24"/>
        </Grid>
    </StackLayout>
</ContentPage>